{% extends 'base.html.twig' %}

{% block title %}Liste des consultants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    ul { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des consultants</h1>
    <ul>
        {%for c in consultants %}
            <li>{{ c.nom|upper }} {{c.prenom|capitalize}} {{c.username|lower}}
                <a href="{{ path('app_consultant', {'id': c.id}) }}">Détail</a> - 
                <a href="{{ path('consultant_update', {'id': c.id}) }}" role="button" class="btn btn-danger">Modifier</a> - 
                <a href="{{ path('consultant_remove', {'id': c.id}) }}" role="button" class="btn btn-danger">Supprimer</a>
            </li>
        {% else %}
            <li><em>Aucun consultant trouvé.</em></li>
        {% endfor %}
    </ul>

<div>
    Créer un nouveau consultant : <a href="{{ path('consultant_create', {}) }}" role="button" class="btn btn-danger">Ajouter</a>
</div>


</div>
{% endblock %}
