{% extends 'base.html.twig' %}

{% block title %}Consultant {{consultant.nom}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Consultant</h2>

<div>

    {% if consultant %}
        <div>{{consultant.id}}</div>
        <div>{{consultant.username|lower}}</div>
        <div>{{consultant.nom|upper }}</div>
        <div>{{consultant.prenom|capitalize}}</div>        
    {% else %}
        <em>Données du consultant non trouvées.</em>
    {% endif %}

</div>
{% endblock %}
